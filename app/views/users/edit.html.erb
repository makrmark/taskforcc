<% form_for(@user) do |f| %>
<table class="signup">
  <thead>
    <tr>
      <th colspan="2">Update Profile</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td colspan="2">
        <%= f.error_messages %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :full_name %>
      </td>
      <td>
        <%= f.text_field :full_name %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :job_title %>
      </td>
      <td>
        <%= f.text_field :job_title %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :organisation %>
      </td>
      <td>
        <%= f.text_field :organisation %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :country %>
      </td>
      <td>
        <%= f.text_field :country %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :phone_number %>
      </td>
      <td>
        <%= f.text_field :phone_number %>
      </td>
    </tr>
    <tr>
      <td>
      </td>
      <td>
        <%= f.submit 'Update', :class=> "signup" %>
      </td>
    </tr>
  </tbody>
</table>

<% end %>

<%= link_to 'Cancel', @user %>
