<fieldset>
<legend>New User</legend>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>


  <p>
    <%= f.label :full_name %>
    <%= f.text_field :full_name %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :confirm_password %>
    <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

</fieldset>

<%= link_to 'Back', users_path %>