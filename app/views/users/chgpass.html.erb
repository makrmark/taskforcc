<fieldset>
<legend>Change Password</legend>

<% form_for @user, :url => setpass_user_path(@user)  do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :new_password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :confirm_password %>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

</fieldset>

<%= link_to 'Cancel', @user %>