<div class="task-detail" id="<%= dom_id(comment) %>"  style="<%= show ? '' : 'display: none;' %>">
	<div class="comment-left"><%= mini_avatar_for(comment.user) %></div>
	<div class="comment-body">

		<%= profile_link_to comment.user.full_name,
			CollaborationUser.find_by_user_id_and_collaboration_id(comment.user_id, comment.task.collaboration_id) -%>
		<%= h(comment.comment) -%>
	  <div class="ctaw"><%= time_ago_in_words comment.created_at -%> ago</div>
	</div>
</div>