<% favourite = task_favourite.favourites.user_filter(current_user.id) %>

<% ttl = favourite.empty? ? "Watch" : "Stop Watching" %>
<% cls = favourite.empty? ? "tf" : "tf f" %>

<%= button_to_remote( "", 
    { 
      :url => favourite_collaboration_task_path (
      :collaboration_id => task_favourite.collaboration_id,
      :id => task_favourite.id
      )
    },
    {
      :method => 'post',
      :class => cls,
      :title => ttl
    }
  )
%>
