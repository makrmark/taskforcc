<h4><%= breadcrumb %> New Task</h4>
<hr />

<% form_for [@collaboration, @task], :html => { :class => "tabulated" } do |f| %>
  <%= f.error_messages %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :topic %>
    <%= f.select :topic_id, @topic_list %>
  </div>
  <div>
    <%= f.label :assigned_to %>
    <%= f.select :assigned_to, @user_list %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label "" %>
    <%= f.submit 'Create' %>
		<%= link_to 'Close', collaboration_tasks_path(
		      :collaboration_id => @collaboration.id,
		      :id => @task.id
		  ) %>  </div>
<% end %>

