<h1>Editing task</h1>

<% form_for(@task) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :id %>
    <%=h @task.id %>
  </p>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :status %>
    <%= f.select :status, %w{New Assigned On-Hold Resolved Closed} %>
  </p>

  <p>
    <%= f.label :resolution %>
    <%= f.select :resolution, %w{Unresolved Completed Duplicate Invalid} %>
  </p>

  <p>
    <%= f.label :created_by %>
    <%=h @task.user_created_by.full_name %>
  </p>

  <p>
    <%= f.label :assigned_to %>
    <%= f.select :assigned_to, @user_list %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @task %> |
<%= link_to 'Back', tasks_path %>