<h4><%= breadcrumb %> Edit Task</h4>
<hr />

<% form_for [@collaboration, @task], :html => { :class => "tabulated" } do |f| %>
  <%= f.error_messages %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :topic %>
    <%= f.select :topic_id, @topic_list %>
  </div>
  <div>
    <%= f.label :created_by %>
    <%=h @task.user_created_by.full_name %>
  </div>
  <div>
    <%= f.label :assigned_to %>
    <%= f.select :assigned_to, @user_list %>
  </div>

  <div>
    <%= f.label :status %>
    <%= f.select :status, %w{New Assigned On-Hold Resolved Closed} %>
  </div>
  <div>
    <%= f.label :resolution %>
    <%= f.select :resolution, %w{Unresolved Completed Duplicate Invalid} %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label "" %>
    <%= f.submit 'Update' %>
		<%= link_to 'Show', collaboration_task_path(
		      :collaboration_id => @collaboration.id,
		      :id => @task.id
		  ) %> |
		<%= link_to 'Close', session[:return_to] || :back %>  </div>
<% end %>


