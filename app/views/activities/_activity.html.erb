<div class="activity-details" id="<%= dom_id(activity) %>">
	<strong><%= link_to activity.user_updated_by.full_name,
		collaboration_collaboration_user_path(
			:collaboration_id => activity.collaboration_id,
			:id => CollaborationUser.find_by_user_id_and_collaboration_id(activity.updated_by, activity.collaboration_id)
			)
		%></strong> <%= activity.action %> this	<%= activity.related_class %>,
		<%= time_ago_in_words(activity.updated_at) %> ago
		<span id="<%= dom_id(activity) %>_show_acts">&bull; <%= link_to_function "Show Changes" do |page|
				page["#{ dom_id(activity) }_show_acts"].hide
				page["#{ dom_id(activity) }_acts"].show
      end
    %></span>
		<ul class='acts' style="display:none;" id="<%= dom_id(activity) %>_acts">
			<%= render :partial => 'activities/act', :collection => activity.acts %>
		</ul>
</div>