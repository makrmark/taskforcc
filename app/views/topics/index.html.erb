<%= render 'shared/collaboration_header' %>

<h1>Listing topics</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Controller</th>
  </tr>

<% @topics.each do |topic| %>
  <tr>
    <td><%=h topic.name %></td>
    <td><span class="user-name"><%= titled_text(topic.user.full_name,
      topic.user.email) %></span></td>
    <td><%= link_to 'Show', collaboration_topic_path(
          :collaboration_id => topic.collaboration_id,
          :id => topic.id
      ) %></td>
    <td><%= link_to 'Edit', edit_collaboration_topic_path(
          :collaboration_id => topic.collaboration_id,
          :id => topic.id
      ) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New topic', new_collaboration_topic_path %>