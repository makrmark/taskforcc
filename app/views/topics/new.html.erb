<h4><%= breadcrumb %> New Topic</h4>
<hr />

<% form_for [@collaboration, @topic], :html => { :class => "tabulated" } do |f| %>
  <%= f.error_messages %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :controller %>
    <%= f.select :controller, @user_list %>
  </div>
  <div>
    <%= f.label "" %>
    <%= f.submit 'Create' %>
		<%= link_to 'Close', session[:return_to] || :back %>
  </div>
<% end %>

