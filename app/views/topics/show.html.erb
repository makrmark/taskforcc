<%= render 'shared/collaboration_header' %>

<%= render 'shared/topic_header' %>

<h4>Tasks</h4>
<hr />

<% if @topic.tasks.empty? %>

<div class="empty-message">
  No tasks match this selection &bull;
  
  <%= link_to 'New task', new_collaboration_task_path(
    :collaboration_id => @collaboration.id,
    :topic_id => @topic.id
  ) %>

</div>

<% else %>
  <%= render(:partial => 'shared/task', :collection => @topic.tasks )%>
<% end %>

<%= button_to 'New task', new_collaboration_task_path(
    :collaboration_id => @collaboration.id,
    :topic_id => @topic.id), 
    :method => 'get' %>
