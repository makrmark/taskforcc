<div class="login">
  <% form_tag do %>
    <fieldset>
      <legend>Please Log In</legend>
      
        <label for="email">Email:</label>
        <%= text_field_tag :email, params[:email] %>

        <label for="password">Password:</label>
        <%= password_field_tag :password, params[:password] %>
      
        <%= submit_tag "Login" , :class=> "login"%>

    </fieldset>  
  <% end %>
</div>