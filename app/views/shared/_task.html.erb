<div class="task <%= cycle("even", "odd") %>">
  <div class="task-collaboration">
    <%= task.collaboration.subject %>
  </div>

  <div class="task-detail <%= task.status %>" >
    <div class="avatar">
      <img class="avatar" title="Responsible" src="/images/anonymous.jpeg">
    </div>
    <div class="icon">
      <img title="Task" src="/images/TaskIcon.gif">
    </div>

    <span class="user-name"><%= titled_text(task.user_assigned_to.full_name,
      task.user_assigned_to.email) %></span>
          
      <%= task.title %>

    <br />
    <br />

    <span class="task-updated">
      Created <%= time_ago_in_words task.updated_at %> ago by <span class="user-name"><%= titled_text(task.user_created_by.full_name,
      task.user_created_by.email) %></span>.
      
      Updated <%= time_ago_in_words task.updated_at %> ago by
      Someone
    </span>

    <span class="task-actions">
      <%= link_to 'Show', collaboration_task_path(
          :collaboration_id => task.collaboration_id,
          :id => task.id
      ) %>
      <%= link_to 'Edit', edit_collaboration_task_path(
          :collaboration_id => task.collaboration_id,
          :id => task.id
      ) %>
      <%= link_to 'Destroy', collaboration_task_path(
          :collaboration_id => task.collaboration_id,
          :id => task.id
      ), :confirm => 'Are you sure?', :method => :delete %>      
    </span>

  </div>
  
  <div class="task-more">
    
  </div>

  <br />

  <hr class="task-separator" />

</div>  
  
