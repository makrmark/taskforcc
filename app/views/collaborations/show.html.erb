<h4 class="breadcrumb"><%= breadcrumb %> Tasks</h4>

<%= render :partial => 'shared/multifunction_tabs' %>

<div id="task-container">
  <% if @collaboration.find_tasks(params).empty? %>
  
    <div class="empty-message" id="task-empty-message">
      No tasks match this selection &bull;
      
      <%= link_to 'New task', new_collaboration_task_path(
          :collaboration_id => @collaboration.id
      ) %>
    
    </div>
  <% else %>
    <div id="task-empty-message"></div>
    <%= render :partial => 'shared/task_container', 
      :collection => @collaboration.find_tasks(params) %>
  <% end %>
</div>

<%= button_to 'New task', new_collaboration_task_path(
    :collaboration_id => @collaboration.id), 
    :method => 'get' %>
