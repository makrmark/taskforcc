<h4><%= breadcrumb %> &raquo; New</h4>
<hr />

<% form_for(@collaboration) do |f| %>
  <div>
    <%= f.error_messages %>
  </div>

  <p>
    <%= f.label :subject %>
    <%= f.text_field :subject %>
  </p>
  <p>
    <%= f.label :status %>
    <%= f.select :status, %w{ Open On-Hold } %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Cancel', :back %>