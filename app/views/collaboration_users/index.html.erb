<h1>Collaboration Users</h1>

<table>
  <tr>
    <th>Collaboration</th>
    <th>User</th>
    <th>Manager</th>
  </tr>

<% @collaboration_users.each do |collaboration_user| %>
  <tr>
    <td><%=h collaboration_user.collaboration_id %></td>
    <td><%=h collaboration_user.user_id %></td>
    <td><%=h collaboration_user.manager %></td>
    <td><%= link_to 'Show', collaboration_collaboration_user_path(
      :collaboration_id => collaboration_user.collaboration_id,
      :id => collaboration_user.id
    ) %></td>
    
    <td><%= link_to 'Edit', edit_collaboration_collaboration_user_path(
      :collaboration_id => collaboration_user.collaboration_id,
      :id => collaboration_user.id
    ) %></td>
    <td><%= link_to 'Destroy', collaboration_collaboration_user_path(
      :collaboration_id => collaboration_user.collaboration_id,
      :id => collaboration_user.id
    ), 
    :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

