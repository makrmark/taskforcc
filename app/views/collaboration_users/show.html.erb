<%= render 'shared/collaboration_header' %>

<div class="collaboration topic">
  <h3 class="topic">
    <%= titled_text(@collaboration_user.user.full_name,
     @collaboration_user.user.email) %>
  </h2>
  <div>
    <span class="collaboration-status">
      Taskforcc Role: <%= @collaboration_user.role %>
    </span>
    <span class="collaboration-actions">
      <%= link_to 'Edit', edit_collaboration_collaboration_user_path(
            :collaboration_id => @collaboration_user.collaboration_id,
            :id => @collaboration_user.id
          ) %> &bull;
      <%= link_to 'Close', collaboration_collaboration_users_path(
            :collaboration_id => @collaboration_user.collaboration_id
          ) %>
    </span>
  </div>
</div>

<hr />

<%= render(:partial => 'shared/task', :collection => @collaboration_user.tasks_assigned_to )%>

<%= link_to 'Edit', edit_collaboration_collaboration_user_path(
      :collaboration_id => @collaboration_user.collaboration_id,
      :id => @collaboration_user.id
    ) %> &bull;
<%= link_to 'Back', collaboration_collaboration_users_path(
      :collaboration_id => @collaboration_user.collaboration_id
    ) %>