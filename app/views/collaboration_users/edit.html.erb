<h4><%= breadcrumb %> &raquo; Change Role</h4>
<hr />

<% form_for [@collaboration, @collaboration_user], :html => { :class => "tabulated" } do |f| %>
  <%= f.error_messages %>

  <div>
    <%= f.label :role %>
    <%= f.select :role, %w{Manager Team Observer Restricted} %>
  </div>
  <div>
    <%= f.label "" %>
    <%= f.submit 'Update' %>
		<%= link_to 'Cancel', collaboration_collaboration_users_path(
		      :collaboration_id => @collaboration_user.collaboration_id
		    ) %>
	</div>
	
	<hr>
	<%= render :partial => "role_access"%>

<% end %>
